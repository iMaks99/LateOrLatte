<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cafe_item_bottom_sheet"
    android:orientation="vertical"
    app:behavior_hideable="true"
    android:background="#FFF"
    app:behavior_peekHeight="105dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/title_cafe"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="25dp"
        android:text="Default Name"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_cafe"
        android:layout_width="143dp"
        android:layout_height="102dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_cafe"
        app:srcCompat="@mipmap/cafe1" />

    <TextView
        android:id="@+id/address_cafe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_cafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_cafe"
        app:layout_constraintTop_toBottomOf="@+id/title_cafe" />


</androidx.constraintlayout.widget.ConstraintLayout>